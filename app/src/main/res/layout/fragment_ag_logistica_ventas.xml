<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context="ui.AgLogisticaVentasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botón de Logística -->
        <Button
            android:id="@+id/btnLogistica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logística de Ventas"
            android:textColor="@android:color/white"
            android:backgroundTint="#388E3C"
            android:layout_marginBottom="16dp" />

        <!-- Selección de Mes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione el Mes"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnVerVentas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Ventas"
            android:textColor="@android:color/white"
            android:backgroundTint="#1976D2"
            android:layout_marginBottom="16dp" />

        <!-- Gráfico de Ventas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gráfico de Ventas"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Estadísticas de Ventas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estadísticas de Ventas"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Encabezado -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto"
                    android:background="#388E3C"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad Vendida"
                    android:background="#388E3C"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganancia"
                    android:background="#388E3C"
                    android:textColor="@android:color/white"
                    android:padding="8dp" />
            </TableRow>

            <!-- Filas de datos -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomates"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100.00"
                    android:padding="8dp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lechugas"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$45.00"
                    android:padding="8dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>
