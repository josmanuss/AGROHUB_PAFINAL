<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AgHistorialVentasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Título -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/historial"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Cuadro con el campo de búsqueda y el botón -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/buscarVentasInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:hint="Buscar Ventas"
                        android:padding="12dp"
                        android:inputType="text" />

                    <Button
                        android:id="@+id/btnActualizarPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/azul"
                        android:padding="10dp"
                        android:text="@string/buscar" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tabla de Ventas -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:stretchColumns="1"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle">

                <!-- Encabezado de la tabla -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorPrimaryDark">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fecha"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Producto"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cantidad"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ganancia"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/white" />
                </TableRow>

                <!-- Fila de ventas con Producto A -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01/11/2024"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Producto A"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$100"
                        android:padding="8dp"
                        android:gravity="center" />
                </TableRow>

                <!-- Fila de Total -->
                <TableRow
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" "
                        android:padding="8dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$100"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="@android:color/white" />
                </TableRow>

            </TableLayout>

            <!-- Navegación de Páginas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!-- Botón Anterior -->
                <Button
                    android:id="@+id/btnSiguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/grisclaro"
                    android:padding="10dp"
                    android:text="@string/siguiente"
                    android:textColor="@color/azul" />

                <!-- Botones de número de página -->
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/azul"
                    android:padding="10dp"
                    android:text="@string/uno" />

                <!-- Botón Siguiente -->
                <Button
                    android:id="@+id/btnAnterior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/grisclaro"
                    android:padding="10dp"
                    android:text="@string/anterior"
                    android:textColor="@color/azul" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
